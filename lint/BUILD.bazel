bzl_library(
    name = "pylint",
    srcs = ["pylint.bzl"],
    deps = ["//lint/private:lint_aspect"],
)

bzl_library(
    name = "keep_sorted",
    srcs = ["keep_sorted.bzl"],
    deps = [
        "//lint/private:lint_aspect",
        "//lint/private:patcher_action",
    ],
)

bzl_library(
    name = "pmd",
    srcs = ["pmd.bzl"],
    deps = _BAZEL_TOOLS + [
        "//lint/private:lint_aspect",
    ],
)

bzl_library(
    name = "checkstyle",
    srcs = ["checkstyle.bzl"],
    deps = _BAZEL_TOOLS + [
        "//lint/private:lint_aspect",
    ],
)


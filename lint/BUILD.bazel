    name = "bandit",
    srcs = ["bandit.bzl"],
    deps = ["//lint/private:lint_aspect"],
)

bzl_library(
    name = "buf",
    srcs = ["buf.bzl"],
    deps = [
        "//lint/private:lint_aspect",
        "@rules_proto//proto:defs",
    ],
)

bzl_library(
    name = "eslint",
    srcs = ["eslint.bzl"],
    deps = [
        "//lint/private:lint_aspect",
        "//lint/private:patcher_action",
        "@aspect_rules_js//js:libs",
        "@bazel_lib//lib:copy_to_bin",
    ],
)

bzl_library(
    name = "lint_test",
    srcs = ["lint_test.bzl"],  # keep
    deps = ["@bazel_lib//lib:paths"],
)

bzl_library(
    name = "flake8",
    srcs = ["flake8.bzl"],
    deps = ["//lint/private:lint_aspect"],
